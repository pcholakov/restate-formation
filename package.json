{
  "name": "restate-formation",
  "version": "0.0.1",
  "description": "Example cloud provisioning system based on Restate",
  "license": "MIT",
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.+(js|ts|json)\"",
    "verify": "npm run format -- --check && npm run lint && npm run build",
    "build": "tsc --noEmitOnError",
    "service": "node ./dist/formation-service.js",
    "service-dev": "RESTATE_DEBUG_LOGGING=JOURNAL ts-node-dev --watch ./src --respawn --transpile-only ./src/formation-service.ts",
    "discover-services": "curl -X POST http://localhost:8081/endpoints -H 'content-type: application/json' -d '{\"uri\": \"http://host.docker.internal:8080\"}'"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.427.0",
    "@aws-sdk/client-lambda": "^3.427.0",
    "@restatedev/restate-sdk": "^0.3.1",
    "jszip": "^3.10.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
